{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "public/dist",
  "installCommand": "npm install && cd public && npm install",
  "functions": {
    "api/index.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/share/(.*)",
      "destination": "/api"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
